{
    "compilerOptions": {
      "target": "ES6",                 
      "module": "CommonJS",             
      "outDir": "./dist",              
      "rootDir": "./src",              
      "strict": true,                  
      "esModuleInterop": true,         
      "forceConsistentCasingInFileNames": true,  
      "skipLibCheck": true,            
      "types": ["node"],
      "jsx": "react-jsx"   

    },
    "include": ["src"],                
    "exclude": ["node_modules"]        
  }
  